{
  "name": "waffler/laravel-bridge",
  "description": "Laravel Bridge Component",
  "minimum-stability": "dev",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Erick de Menezes",
      "email": "erickmenezes.dev@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Waffler\\Bridge\\Laravel\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Waffler\\Bridge\\Laravel\\Tests\\": "tests"
    }
  },
  "require": {
    "php": "^8.4",
    "illuminate/support": "^12",
    "waffler/client": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "mockery/mockery": "^1.4",
    "jetbrains/phpstorm-attributes": "dev-master"
  },
  "scripts": {
    "phpunit": "@php ./vendor/bin/phpunit",
    "test": "@phpunit"
  },
  "config": {
    "allow-plugins": {
      "phpunit/phpunit": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.0.x-dev",
      "dev-main": "4.0.x-dev"
    }
  }
}
