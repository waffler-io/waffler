{
  "name": "waffler/waffler",
  "description": "The Waffler Project Monorepo",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "libs/bridge/*"
    },
    {
      "type": "path",
      "url": "libs/components/*"
    },
    {
      "type": "path",
      "url": "libs/contracts/*"
    }
  ],
  "authors": [
    {
      "name": "Erick de Menezes",
      "email": "erickmenezes.dev@gmail.com"
    }
  ],
  "autoload-dev": {
    "psr-4": {
      "Waffler\\Component\\Attributes\\Tests\\": "libs/components/attributes/tests",
      "Waffler\\Component\\Generator\\Tests\\": "libs/components/generator/tests",
      "Waffler\\Component\\Helpers\\Tests\\": "libs/components/helpers/tests",
      "Waffler\\Component\\Client\\Tests\\": "libs/components/client/tests",
      "Waffler\\Component\\HttpClient\\Tests\\": "libs/components/http-client/tests",
      "Waffler\\Contracts\\Attributes\\Tests\\": "libs/contracts/attributes-contracts/tests",
      "Waffler\\Contracts\\Client\\Tests\\": "libs/contracts/client-contracts/tests",
      "Waffler\\Contracts\\HttpClient\\Tests\\": "libs/contracts/http-client-contracts/tests",
      "Waffler\\Contracts\\Generator\\Tests\\": "libs/contracts/generator-contracts/tests",
      "Waffler\\Bridge\\Laravel\\Tests\\": "libs/bridge/laravel-bridge/tests",
      "App\\": "workbench/app/",
      "Database\\Factories\\": "workbench/database/factories/",
      "Database\\Seeders\\": "workbench/database/seeders/"
    }
  },
  "require": {
    "php": "^8.4",
    "waffler/laravel-bridge": "4.1.x-dev",
    "waffler/attributes": "4.1.x-dev",
    "waffler/client": "4.1.x-dev",
    "waffler/generator": "4.1.x-dev",
    "waffler/helpers": "4.1.x-dev",
    "waffler/http-client": "4.1.x-dev",
    "waffler/attributes-contracts": "4.1.x-dev",
    "waffler/client-contracts": "4.1.x-dev",
    "waffler/http-client-contracts": "4.1.x-dev",
    "waffler/generator-contracts": "4.1.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "mockery/mockery": "^1.4",
    "jetbrains/phpstorm-attributes": "dev-master",
    "friendsofphp/php-cs-fixer": "^3.4",
    "phpstan/phpstan": "^2.1",
    "orchestra/testbench": "^10.0"
  },
  "scripts": {
    "phpstan": "@php ./vendor/bin/phpstan analyse -c phpstan.neon",
    "phpunit": "@php ./vendor/bin/phpunit",
    "php-cs-fixer": "@php ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
    "php-cs-fixer:docker": "docker run -it --rm -v $(pwd):/code ghcr.io/php-cs-fixer/php-cs-fixer:${FIXER_VERSION:-3-php8.3} fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
    "test": "@phpunit",
    "lint": "@phpstan",
    "style": "@php-cs-fixer",
    "post-autoload-dump": [
      "@clear",
      "@prepare"
    ],
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": "@php vendor/bin/testbench workbench:build --ansi",
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve --ansi"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform-check": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "phpunit/phpunit": true,
      "friendsofphp/php-cs-fixer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.1.x-dev",
      "dev-main": "4.1.x-dev"
    }
  }
}
